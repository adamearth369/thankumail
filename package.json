"scripts": {
  "build": "npm run build:server",
  "build:server": "node -e \"const fs=require('fs');const entry=fs.existsSync('server/index.ts')?'server/index.ts':(fs.existsSync('src/index.ts')?'src/index.ts':null);if(!entry){console.error('Missing entry: server/index.ts or src/index.ts');process.exit(1)};console.log('Building:',entry)\" && npx esbuild $(node -e \"const fs=require('fs');process.stdout.write(fs.existsSync('server/index.ts')?'server/index.ts':'src/index.ts')\") --bundle --platform=node --format=cjs --outfile=dist/index.cjs --packages=external",
  "start": "node dist/index.cjs"
}
